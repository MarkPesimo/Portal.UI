@model List<APWModel.ViewModel.iSearch.HelpModel>

@{
    ViewBag.Title = "Help";
}

@section Scripts{
    <script src="~/Scripts/Helpdesk/help.js"></script>
}


<section class="main">
    <div class="main-title py-3">
        <div class="container-fluid">
            <div class="row justify-content-between align-items-center" id="help-main-div">
                <div class="col-lg-auto text-center text-lg-start mb-lg-0">
                    <h1 class="h4 mt-2 mb-lg-0">Help</h1>

                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Help</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>


    <div class="main-content py-3">
        <div class="container-fluid">
            <div class="widget widget-table">
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle" id="help-table">
                        <thead>
                            <tr>
                                <th class="bg-primary text-white">No.</th>
                                <th class="bg-primary text-white">Title</th>
                                <th class="bg-primary text-white text-center" >Menu</th>
                                <th class="bg-primary text-white "></th>
                            </tr>
                        </thead>

                        <tbody>

                            @foreach (var item in Model)
                            {
                                @Html.Partial("./partial/Help_item", item)
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>


@Html.Partial("~/Views/Help/Modal/preview_modal.cshtml")
