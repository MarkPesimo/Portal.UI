@model APWModel.ViewModel.Portal.Profile_model

@{
    ViewBag.Title = "Profile";
}

@section Scripts{
    <script src="~/Scripts/Profile/Profile.js"></script>
}

<section class="main">
    <div class="main-title py-3">
        <div class="container-fluid">
            <div class="row justify-content-between align-items-center">
                <div class="col-lg-auto text-center text-lg-start mb-lg-0">
                    <h1 class="h4 mt-2 mb-lg-0">@Model.InitialInfo.EmployeeName    </h1>
                  
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Profile   </li>
                        </ol>
                    </nav>
                </div>

                <div class="col-lg-auto" id="div-candidate-header-menu">
                    <div class="row">                        
                        <div class="col-lg-auto">
                            <p class="text-danger mt-2">@ViewBag._WithPendingRequest_profile</p>
                        </div>
                        <div class="col-lg-auto">
                            <a class="btn ms-lg-1  btn-sm btn-primary edit-profile-btn"><i class="fa fa-solid fa-user-plus"></i> Edit Profile</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="main-content py-3">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-3 col-xl-2" id="div-full-profile-initial">                    
                    @Html.Partial("~/Views/Profile/partial/_Profile_InitialInfo.cshtml", Model.InitialInfo)
                </div>

                <div class="col-lg-9 col-xl-10">
                    <div class="widget p-0">
                        <div class="p-4 border-bottom" style="border-bottom-color: #ebf0f7;" id="div-full-profile-personal">
                          
                            @Html.Partial("~/Views/Profile/partial/_profile_personal.cshtml", Model.PersonalInfo)
                        </div>

                        <div class="p-4 border-bottom border-secondary" id="div-full-profile-contact">
                            @Html.Partial("~/Views/Profile/partial/_profile_Contact.cshtml", Model.PersonalInfo)
                        </div>

                        <div class="p-4 border-bottom border-secondary" id="div-full-profile-governemnt">
                            @Html.Partial("~/Views/Profile/partial/_profile_Government.cshtml", Model.GovernmentInfo)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



@Html.Partial("~/Views/Profile/Modal/_Attach_image_modal.cshtml")
@Html.Partial("~/Views/Profile/Modal/_Edit_Profile_modal.cshtml")