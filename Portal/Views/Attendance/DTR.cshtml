

@{
    ViewBag.Title = "Daily Time Record";
}

@section Scripts
{
    <script src="@Url.Content("~/Scripts/Attendance/DTR.js")"></script>
}

<section class="main">
    <div class="main-title py-3">
        <div class="container-fluid" id="industry-header-div">
            <div class="row justify-content-between align-items-center">
                <div class="col-lg-auto text-center text-lg-start b-lg-0">
                    <h1 class="h4 mt-2 mb-lg-0">DTR</h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Attendance")">Attendance</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Daily Time Record</li>
                        </ol>
                    </nav>
                </div>

                <div class="col-lg-auto mt-lg-0 mt-4">
                    <div class="row">
                        <div class="col-lg-auto col-6">
                            <button type="button" class="btn btn-sm ms-lg-1 btn-dark rounded" id="show_dtr_filter_btn">
                                <i class="fa-solid fa-sliders"></i> Filter Records
                            </button>
                        </div>
                        <div class="col-lg-auto col-6">
                            <button type="button" class="btn btn-sm ms-lg-1 btn-primary rounded" id="add_dtr_btn">
                                <i class="fa-solid fa-plus"></i> File DTR
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="main-content py-3">
        <div class="container-fluid">
            <div class="widget widget-table">
                <div class="table-responsive">
                    <table class="table table-sm table-striped table-hover align-middle" id="dtr-table">
                        <thead>
                            <tr>
                                <th class="bg-primary text-white">Date Filed</th>
                                <th class="bg-primary text-white">Description</th>
                                @*<th class="bg-primary text-white">Date From & To</th>*@
                                <th class="bg-primary text-white">Status</th>
                                <th class="bg-primary text-white">Details</th>
                                <th class="bg-primary text-white">&nbsp;</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>


@Html.Partial("~/Views/Attendance/Modal/dtr/_filter_dtr_modal.cshtml")
@Html.Partial("~/Views/Attendance/Modal/dtr/_add_dtr_modal.cshtml")

@Html.Partial("~/Views/Attendance/Modal/dtr/_edit_dtr_modal.cshtml")
@Html.Partial("~/Views/Attendance/Modal/dtr/_post_dtr_modal.cshtml")
@Html.Partial("~/Views/Attendance/Modal/dtr/_unpost_dtr_modal.cshtml")
@Html.Partial("~/Views/Attendance/Modal/dtr/_cancel_dtr_modal.cshtml")
