
@{
    ViewBag.Title = "Clock In & Out";
}

@section Scripts
{
    <script src="@Url.Content("~/Scripts/Attendance/Clockinout.js")"></script>
}

<section class="main">
    <div class="main-title py-3">
        <div class="container-fluid" id="industry-header-div">
            <div class="row justify-content-between align-items-center">

                <div class="col-lg-auto text-center text-lg-start b-lg-0">
                    <h1 class="h4 mt-2 mb-lg-0">Clock In & Out</h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Attendance")">Attendance</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Clock in & Out</li>
                        </ol>
                    </nav>
                </div>

                <div class="col-lg-auto mt-lg-0 mt-4">
                    <div class="row">
                        <div class="col-lg-auto col-6">
                            <button type="button" class="btn btn-sm ms-lg-1 btn-dark rounded" id="show_clockinout_filter_btn">
                                <i class="fa-solid fa-sliders"></i> Filter Records
                            </button>
                        </div>
                        <div class="col-lg-auto col-6">
                            <button type="button" class="btn btn-sm ms-lg-1 rounded btn-primary" id="add_correction_btn">
                                <i class="fa-solid fa-plus"></i> File Correction
                            </button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="main-content py-3">
        <div class="container-fluid">
            <div class="widget widget-table">
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle" id="clockinout-table">
                        <thead>
                            <tr>
                                <th class="bg-primary text-white">Date Log</th>
                                <th class="bg-primary text-white">Day</th>
                                <th class="bg-primary text-white">Shift</th>
                                <th class="bg-primary text-white">Time In</th>
                                <th class="bg-primary text-white">Time Out</th>
                                <th class="bg-primary text-white">Details</th>
                                <th class="bg-primary text-white">Status</th>
                                <th class="bg-primary text-white">&nbsp;</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>


@Html.Partial("~/Views/Attendance/Modal/ClockInOut/_filter_clockinout_modal.cshtml")
@Html.Partial("~/Views/Attendance/Modal/Correction/_add_correction_modal.cshtml")

