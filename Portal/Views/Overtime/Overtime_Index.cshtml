
@{
    ViewBag.Title = "Filed Overtime Monitoring";
}

@section Scripts{
    <script src="~/Scripts/Overtime/Overtime.js"></script>
}


<section class="main">
    <div class="main-title py-3">
        <div class="container-fluid">
            <div class="row justify-content-between align-items-center">
                <div class="col-lg-auto text-center text-lg-start mb-lg-0">
                    <h1 class="h4 mt-2 mb-lg-0">Filed Overtime Monitoring</h1>

                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Overtime</li>
                        </ol>
                    </nav>
                </div>

                <div class="col-lg-auto mt-lg-0 mt-4">
                    <div class="row">
                        <div class="col-lg-auto col-6">
                            <button type="button" class="btn btn-sm ms-lg-1 btn-dark rounded" id="show_overtime_filter_btn">
                                <i class="fa-solid fa-sliders"></i> Filter Records
                            </button>
                        </div>

                        <div class="col-lg-auto col-6">
                            <button type="button" class="btn btn-sm ms-lg-1 btn-primary rounded" id="file_overtime_btn">
                                <i class="fa-solid fa-plus"></i> File Overtime
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="main-content py-3">
        <div class="container-fluid">

            <div class="widget widget-table">
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle" id="overtime-table">
                        <thead>
                            <tr>
                                <th class="bg-primary text-white">Date Filed</th>

                                <th class="bg-primary text-white">OT Start</th>
                                <th class="bg-primary text-white">OT End</th>

                                <th class="bg-primary text-white">Hour(s)</th>
                                <th class="bg-primary text-white">Reason</th>
                                <th class="bg-primary text-white">File Status</th>
                                <th class="bg-primary text-white">Approved OT Hour(s)</th>
                                <th class="bg-primary text-white">Remarks</th>
                                <th class="bg-primary text-white">Details</th>
                                <th class="bg-primary text-white">&nbsp;</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>


        </div>
    </div>
</section>


@Html.Partial("~/Views/Overtime/Modal/_overtime_filter_modal.cshtml")
@Html.Partial("~/Views/Overtime/Modal/_open_overtime_file_modal.cshtml")

@Html.Partial("~/Views/Overtime/Modal/_add_overtime_modal.cshtml")
@Html.Partial("~/Views/Overtime/Modal/_edit_overtime_modal.cshtml")
@Html.Partial("~/Views/Overtime/Modal/_post_overtime_modal.cshtml")
@Html.Partial("~/Views/Overtime/Modal/_unpost_overtime_modal.cshtml")
@Html.Partial("~/Views/Overtime/Modal/_cancel_overtime_modal.cshtml")
