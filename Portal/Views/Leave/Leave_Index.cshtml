
@{
    ViewBag.Title = "Leave Balance and Monitoring";
}

@section Scripts{
    <script src="~/Scripts/Leave/Leave.js"></script>
}


<section class="main">
    <div class="main-title py-3">
        <div class="container-fluid">
            <div class="row justify-content-between align-items-center">
                <div class="col-lg-auto text-center text-lg-start mb-lg-0">
                    <h1 class="h4 mt-2 mb-lg-0">Leave Balance and Monitoring</h1>

                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Leave</li>
                        </ol>
                    </nav>
                </div>

                <div class="col-lg-auto mt-lg-0 mt-4">
                    <div class="row">
                        <div class="col-lg-auto col-6">
                            <button type="button" class="btn btn-sm ms-lg-1 btn-dark rounded" id="show_leave_filter_btn">
                                <i class="fa-solid fa-sliders"></i> Filter Records
                            </button>
                        </div>

                        <div class="col-lg-auto col-6">
                            <button type="button" class="btn btn-sm ms-lg-1 btn-primary rounded" id="file_leave_btn">
                                <i class="fa-solid fa-plus"></i> File Leave
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="main-content py-3">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-4 mb-3 me-2 widget ">
                    <div class="row" id="div-sick-leave">
                        <div class="col-4">
                            <a href="#" class="d-block w-100 text-center">
                                <span class="display-6 bg-body py-2 p-3 rounded d-inline-block mb-3">
                                    <i class="fa-solid fa-house-chimney-medical"> </i>
                                </span>
                                <h4 class="text-primary">Sick Leave</h4>
                            </a>
                        </div>
                        <div class="col">
                            <div class="row">
                                <div class="col">
                                    <p id="label-sl-entitled" class="mb-0 text-muted"><strong class="text-primary">0.00</strong> </p>
                                    <p id="label-sl-earned" class="mb-0 text-muted"><strong class="text-primary">0</strong> Earned </p>
                                    <p id="label-sl-used" class="mb-0 text-muted"><strong class="text-primary">0</strong> Used </p>                                    
                                </div>

                                <div class="col">
                                    <p id="label-sl-balance" class="mb-0 text-muted"><strong class="text-primary">0</strong> Balance </p>
                                    <p id="label-sl-valid-until" class="mb-0 text-muted"><strong class="text-primary">mm-yy</strong> Valid until </p>
                                    
                                </div>
                            </div>    
                            <div class="row">
                                <p id="label-sl-earned-at" class="mb-0 text-muted"><strong class="text-primary">mm-yy</strong> Earned at the </p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 mb-3 widget ">
                    <div class="row" id="div-vacation-leave">
                        <div class="col-4">
                            <a href="#" class="d-block w-100 text-center">
                                <span class="display-6 bg-body py-2 p-3 rounded d-inline-block mb-3">
                                    <i class="fa-solid fa-plane"></i>
                                </span>
                                <h4 class="text-primary">Vacation Leave</h4>
                            </a>
                        </div>

                        <div class="col">
                            <div class="row">
                                <div class="col">
                                    <p id="label-vl-entitled" class="mb-0 text-muted"><strong class="text-primary">0.00</strong> Entitled </p>
                                    <p id="label-vl-earned" class="mb-0 text-muted"><strong class="text-primary">0</strong> Earned </p>
                                    <p id="label-vl-used" class="mb-0 text-muted"><strong class="text-primary">0</strong> Used </p>
                                </div>
                                <div class="col">
                                    <p id="label-vl-balance" class="mb-0 text-muted"><strong class="text-primary">0</strong> Balance </p>
                                    <p id="label-vl-valid-until" class="mb-0 text-muted"><strong class="text-primary">mm-yy</strong> Valid until </p>
                                </div>
                            </div>
                            <div class="row">
                                <p id="label-vl-earned-at" class="mb-0 text-muted"><strong class="text-primary">mm-yy</strong> Earned at the </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="row mt-1">
                <div class="widget widget-table">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover align-middle" id="leave-table">
                            <thead>
                                <tr>
                                    <th class="bg-primary text-white">Date Filed</th>
                                    <th class="bg-primary text-white">Leave Type</th>
                                    <th class="bg-primary text-white">From</th>
                                    <th class="bg-primary text-white">To</th>
                                  
                                    <th class="bg-primary text-white">Day(s)</th>
                                    <th class="bg-primary text-white">Reason</th>
                                    <th class="bg-primary text-white">File Status</th>

                                    <th class="bg-primary text-white">Details</th>
                                    <th class="bg-primary text-white">&nbsp;</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

@Html.Partial("~/Views/Leave/Modal/_leave_filter_modal.cshtml")

@Html.Partial("~/Views/Leave/Modal/_add_leave_modal.cshtml")
@Html.Partial("~/Views/Leave/Modal/_edit_leave_modal.cshtml")
@Html.Partial("~/Views/Leave/Modal/_post_leave_modal.cshtml")
@Html.Partial("~/Views/Leave/Modal/_unpost_leave_modal.cshtml")
@Html.Partial("~/Views/Leave/Modal/_cancel_leave_modal.cshtml")
