 
@{
    ViewBag.Title = "Employee Payroll";
}

@section Scripts
{
    <script src="@Url.Content("~/Scripts/Payroll/Payslip.js")"></script>
}

<section class="main">
    <div class="main-title py-3">
        <div class="container-fluid" id="industry-header-div">
            <div class="row justify-content-between align-items-center">
                <div class="col-lg-auto text-center text-lg-start b-lg-0">
                    <h1 class="h4 mt-2 mb-lg-0">Payslips</h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Payroll")">Payroll</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Payslips</li>
                        </ol>
                    </nav>
                </div>

                <div class="col-lg-auto mt-lg-0 mt-4">
                    <div class="row">
                        <div class="col-lg-auto">
                            <button type="button" class="btn btn-sm ms-lg-1 btn-dark rounded" id="show_payslip_filter_btn">
                                <i class="fa-solid fa-sliders"></i> Filter Records
                            </button>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="main-content py-3">
        <div class="container-fluid">
            <div class="widget widget-table">
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle" id="payslip-table">
                        <thead>
                            <tr>
                                <th class="bg-primary text-white">Pay Date</th>
                                <th class="bg-primary text-white">Payroll Description</th>
                                <th class="bg-primary text-white">&nbsp;</th>
                            </tr>
                        </thead>


                    </table>
                </div>
            </div>
        </div>
    </div>
</section>


@Html.Partial("~/Views/Payroll/Modal/_payroll_filter_modal.cshtml")
