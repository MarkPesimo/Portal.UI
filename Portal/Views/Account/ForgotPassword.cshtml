@model APWModel.ViewModel.Global.Account.Portal_ForgotPassword_model

@{
    ViewBag.Title = "Forgot Password";
    Layout = "~/Views/Shared/Layouts/_BlankLayout.cshtml";
}

@section Scripts
{
    <script src="~/Scripts/Account/Password.js"></script>
}


<section class="login d-flex align-items-center"  style="background-color: #282828;">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-6">
                <h1 class="login-logo text-center h3 mb-4">
                    <img src="~/Content/images/apw.png" class="d-inline me-2 " alt=""><span class="text-white"> Forgot Password</span>

                </h1>
           

                @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { id = "ForgotPasswordForm", @class = "login-form shadow-sm border border-light" }))
                {
                    <p class="small " style="color:red;">
                        @*Use the form below to create a new account.  Password are required to be a minimum of @Membership.MinRequiredPasswordLength characters in length.*@
                        To locate your APW Portal account, we need to match your information below with our database records
                    </p>

                    @Html.ValidationSummary(true, "", new { @class = "text-danger form-control-sm font-weight-bold" })

                    <div class="form-group mb-3">
                        <div class="row">
                            <div class="col-lg-6">
                                @Html.ValidationMessageFor(model => model.Username, null, new { @class = "form-control-sm", @style = "color:red" })
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fa-solid fa-user"></i>
                                    </span>
                                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @placeholder = "Username" })
                                </div>
                            </div>

                            <div class="col-lg-6">
                                @Html.ValidationMessageFor(model => model.EmailAddress, null, new { @class = "form-control-sm", @style = "color:red" })
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fa-regular fa-envelope"></i>
                                    </span>
                                    @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control", @placeholder = "Email Address" })
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="form-group mb-3">
                        <div class="row">
                            <div class="col-lg-6">
                                @Html.ValidationMessageFor(model => model.Middlename, null, new { @class = "form-control-sm", @style = "color:red" })

                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fa-solid fa-user"></i>
                                    </span>
                                    @Html.TextBoxFor(m => m.Middlename, new { @class = "form-control", @placeholder = "Middlename" })
                                </div>
                            </div>

                            <div class="col-lg-6">
                                @Html.ValidationMessageFor(model => model.Birthdate, null, new { @class = "form-control-sm", @style = "color:red" })

                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fa-solid fa-cake-candles"></i>
                                    </span>
                                    @Html.TextBoxFor(m => m.Birthdate, new { @class = "form-control", @placeholder = "BirthDate", @type = "date", @Value = Model.Birthdate.ToString("yyyy-MM-dd") })
                                </div>
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn mt-4 w-100 btn-primary">Recover</button>
                }
            </div>
        </div>
    </div>
</section>
