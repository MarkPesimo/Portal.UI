@model APWModel.ViewModel.Global.Account.Portal_NewPasswordModel

@{
    ViewBag.Title = "Password Reset";
    Layout = "~/Views/Shared/Layouts/_BlankLayout.cshtml";
}

@section Scripts
{
    <script src="~/Scripts/Account/Password.js"></script>    
}

<section class="login  d-flex  align-items-center" style="background-color: #282828;">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-6">
                <h1 class="mt-4 login-logo text-center text-white h1 mb-4">
                    
                    <img src="~/Content/images/apw.png" class="d-inline me-2 " alt=""><span class="text-white">Enter a new Password</span>
                </h1>


                @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { id = "ResetPasswordForm", @class = "login-form shadow-sm border border-light" }))
                {
                    @Html.HiddenFor(model => model.UserID)
                    @Html.ValidationSummary(true, "", new { @class = "text-danger form-control-sm font-weight-bold" })

                    <div class="form-group mb-3">
                        @Html.ValidationMessageFor(model => model.NewPassword, null, new { @class = "form-control-sm zips-label", @style = "color:red" })
                        <div class="row">
                            <div class="input-group">                                
                                <span class="input-group-text">
                                    <i class="fa-solid fa-key"></i>
                                </span>
                                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", @placeholder = "New Password" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        @Html.ValidationMessageFor(model => model.ConfirmPassword, null, new { @class = "form-control-sm zips-label", @style = "color:red" })
                        <div class="row">
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fa-solid fa-key"></i>
                                </span>
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm Password" })
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn mt-4 w-100 btn-primary">
                        <i class="bi bi-arrow-clockwise"></i> Reset Password
                    </button>
                }
            </div>
        </div>
    </div>
</section>
