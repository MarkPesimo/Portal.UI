@model APWModel.ViewModel.Global.LoginModel
    
@{ 
    ViewBag.Title = "User Authentication";
    Layout = "~/Views/Shared/Layouts/_BlankLayout.cshtml";
}

@section Scripts
{
    <script src="@Url.Content("~/Scripts/Account/Account.js")"></script>
}

<section class="login d-flex align-items-center" style="background-color: #282828;">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5" id="div-login">
                <h1 class="login-logo text-center h3 mb-4">
                    @*<img src="~/Content/images/apwtech.png" class="d-inline me-2 " alt=""><span class="text-white">APW Portal</span>*@
                    <img src="~/Content/images/apw.png" class="d-inline me-2 " alt=""><span class="text-white">APW Portal</span>
                </h1>

                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "login-form shadow-sm border border-light", enctype = "multipart/form-data", name = "login-Form", id = "login-Form" }))
                //                    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @id = "login-form",  }))
                {
                    @Html.HiddenFor(m => m.AppModuleId)


                    <div class="row" id="div-validation" style="display: none;">
                        <div class="col-lg-12 mb-3">
                            <label for="html" id="error-message-label" class="form-label text-danger">@Model.Remarks</label><br>
                        </div>
                    </div>


                    <div class="form-group mb-3">
                        <label class="form-label" for="login-email">Username</label>
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Username", @ariadescribedby = "login-email-help" })
                        @*<input type="email" class="form-control" id="login-email" aria-describedby="login-email-help" placeholder="Enter email">*@
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label" for="login-password">Password</label>
                        <div class="input-group">
                            @*<input type="password" class="form-control" placeholder="Password" id="login-password">*@
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                            <div class="input-group-append">
                                <button class="btn btn-dark" type="button" id="show-password"><i class="fa-regular fa-eye"></i></button>
                            </div>
                        </div>
                    </div>

                    <div class="text-end mt-1 mb-4">
                        @Html.ActionLink("Forgot Password?", "ForgotPassword") 
                    </div>

                    @*<div class="text-end">
                        <a href="#" class="mb-3 d-inline-block">Forgot Password</a>
                    </div>*@

                    <button type="button" class="btn w-100 btn-primary" id="login-btn">Login</button>
                }


            </div>
        </div>

    </div>
</section>


 